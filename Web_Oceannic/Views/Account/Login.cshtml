<body class="page-md login">


    @*@{ Html.RenderPartial("_Alertas"); }
    *@


    <!-- BEGIN LOGO -->
    <div class="logo">

        @*<img src="~/Content/Images/logoOrionTopo.png" style="height:110px" alt="Vortice 4.0" title="Vortice 4.0" />*@
        Oceannic
    </div>


    <!-- END LOGO -->
    <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
    <div class="menu-toggler sidebar-toggler">
    </div>
    <!-- END SIDEBAR TOGGLER BUTTON -->
    <!-- BEGIN LOGIN -->
    @using (Html.BeginForm("Login", "Account"))
    {
        <div class="content">


            <!-- BEGIN LOGIN FORM -->

            <h3 class="form-title">Entre na sua conta</h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span>
                    Digite seu Usuário e Senha!
                </span>
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Usuário</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control placeholder-no-fix", maxlength = "100", placeholder = "Usuário" })
                    @*<input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Usuário" name="sUsuario" id="sUsuario" />*@
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Senha</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Senha" name="Senha" id="Senha" />
                </div>
            </div>
            <div class="form-actions">

                <button type="submit" class="btn blue pull-right">
                    Entrar <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>

            <div class="forget-password">
                <h4>Esqueceu a Senha ?</h4>
                <p>
                    não se preocupe, clique <a href="javascript:;" id="forget-password">
                        aqui
                    </a>
                    para resetar sua senha.
                </p>
                <h4>Não é cadastrado?</h4>
                <p>
                    Então clique <a href="@Url.Action("Create","User")" >
                        aqui
                    </a> e abra sua conta
                </p>
            </div>

            <!-- END LOGIN FORM -->
            <!-- BEGIN FORGOT PASSWORD FORM -->

            <form class="forget-form" action="~/" method="post">
                <div style="display:none">
                    <h3>Esqueceu a Senha ?</h3>
                    <p>
                        Entre com seu E-Mail de cadastro!
                    </p>

                    <div class="form-group">
                        <div class="input-icon">
                            <i class="fa fa-envelope"></i>
                            <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Email" name="email" />
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="button" id="back-btn" class="btn">
                            <i class="m-icon-swapleft"></i> Voltar
                        </button>
                        <button type="submit" class="btn blue pull-right">
                            Resetar <i class="m-icon-swapright m-icon-white"></i>
                        </button>
                    </div>
                </div>
                <!-- END FORGOT PASSWORD FORM -->
            </form>


        </div>

    }
    <!-- END LOGIN -->
